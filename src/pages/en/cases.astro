    .case-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 102, 204, 0.1);
        border-color: var(--primary-light);
    }

    .case-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .case-icon {
