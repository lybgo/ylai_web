---
import Layout from "../../layouts/Layout.astro";
import FeatureShowcase from "../../components/home/FeatureShowcase.astro";

const lang = "en";

// Data for Input Interface
const inputItems = [
    {
        img: "/images/senser/senser_nitu.png",
        name: "Soil Integration Sensor (RS485)",
    },
    {
        img: "/images/senser/senser_air.png",
        name: "Temp & Humidity Sensor (IIC)",
    },
    {
        img: "/images/senser/senser_water.png",
        name: "Liquid Level Transmitter (4-20mA)",
    },
    {
        img: "/images/senser/senser_light.png",
        name: "Illuminance Sensor (IIC)",
    },
    {
        img: "/images/senser/senser_rs485.png",
        name: "Smart Power Meter (RS485)",
    },
    {
        img: "/images/senser/water_switch.png",
        name: "Float Level Switch (Digital)",
    },
];

const inputMoreItems = [
    "CO2",
    "Liquid pH",
    "Dissolved Oxygen",
    "Turbidity",
    "Photoelectric Switch",
    "Human Presence",
    "Weather Station",
    "Rain Sensor",
    "Flow Sensor",
    "Wind Speed",
    "Combustible Gas",
    "Ammonia Nitrogen",
];

const inputSpecs = [
    "Digital/NPN/Frequency/Pulse",
    "RS485 Modbus RTU",
    "IIC",
    "0-10V/4-20mA/Custom ADC",
    "433MHz Remote Signal",
];

const inputHighlights = [
    { top: "-2%", right: "12%", width: "35%", height: "35%" },
];

// Data for Output Interface
const outputItems = [
    { img: "/images/dev/dev_dcf.png", name: "Solenoid Valve (Switch)" },
    { img: "/images/dev/dev_pqs.png", name: "Exhaust Fan (Switch)" },
    { img: "/images/dev/dev_bpq.png", name: "Inverter (Frequency)" },
    { img: "/images/dev/dev_jcq.png", name: "AC Contactor (Switch)" },
    { img: "/images/dev/dev_zwd.png", name: "Grow Light (0-10V)" },
    { img: "/images/dev/dev_bjdj.png", name: "Stepper Motor (Frequency)" },
];

const outputMoreItems = [
    "Three-phase Motor",
    "Electric Rolling Door",
    "Heating Rod",
    "Buzzer",
    "Brushless Motor",
    "Proportional Valve",
    "Solid State Relay",
    "Servo Motor",
    "Control Box Buttons",
    "Lighting Driver",
    "Oxygenator",
    "Humidifier",
    "Sprayer",
    "Electric Push Rod",
    "Cooling Water Curtain",
    "Electric Sunshade",
];

const outputSpecs = [
    "Relay Switch Control",
    "RS485 Modbus RTU",
    "PWM/Pulse/Frequency/Duty Cycle",
    "IIC",
    "0-10V/4-20mA",
    "433MHz Remote Signal",
];

const outputHighlights = [
    { top: "-3%", left: "26%", width: "20%", height: "35%" },
    { bottom: "-4%", left: "15%", width: "70%", height: "38%" },
];
---

<Layout
    title="IOTAutoMate - Universal IoT Automation Controller | No Programming"
    description="No-programming smart IoT automation controller, easy mobile app configuration, supports 95% of market sensors, WiFi/4G/Bluetooth connectivity"
    lang={lang}
>
    <!-- Hero Section -->
    <section
        class="relative overflow-hidden bg-gradient-to-br from-[#f0f7ff] to-[#e6f0fa] py-16 px-6"
    >
        <div
            class="mx-auto grid max-w-[1200px] grid-cols-1 items-center gap-12 md:grid-cols-2 text-center md:text-left"
        >
            <div class="relative z-10">
                <h1
                    class="animate-fade-in-up mb-6 text-4xl font-bold leading-tight text-[#1e293b] md:text-[2.75rem]"
                >
                    Make Automation Control Simple<br />
                    <span class="text-[#0066cc]"
                        >Make IoT at Your Fingertips</span
                    >
                </h1>
                <p
                    class="animate-fade-in-up mb-8 text-xl leading-relaxed text-[#64748b]"
                    style="animation-delay: 0.1s"
                >
                    No programming, easily configure control logic via APP<br
                    />Achieve intelligence and automation for your products in
                    just 1 day<br />
                    ‚Äî‚Äî IOTAutoMate, your universal smart IoT automation controller
                </p>
                <ul
                    class="animate-fade-in-up mb-8 grid grid-cols-1 justify-items-center gap-3 md:grid-cols-[max-content_max-content] md:justify-items-start"
                    style="animation-delay: 0.15s"
                >
                    {
                        [
                            [
                                "üè≠",
                                "Traditional Equipment ¬∑ Rapid Intelligence",
                            ],
                            ["üí°", "Smart Hardware Ideas ¬∑ Fast Deployment"],
                            ["‚ö°", "Smart Engineering ¬∑ Efficient Delivery"],
                        ].map(([icon, text]) => (
                            <li class="flex w-fit items-center gap-3 rounded-xl bg-white/70 px-5 py-2.5 text-[1.1rem] font-semibold text-[#1e293b] shadow-sm backdrop-blur-sm transition-all hover:translate-x-1 hover:bg-white/90 hover:shadow-md">
                                <span class="text-xl">{icon}</span> {text}
                            </li>
                        ))
                    }
                </ul>
                <div
                    class="animate-fade-in-up flex flex-wrap justify-center gap-4 md:justify-start"
                    style="animation-delay: 0.2s"
                >
                    <a
                        href="/en/buy"
                        class="inline-flex items-center justify-center rounded-lg bg-[rgba(0,102,204,0.1)] px-8 py-3 text-lg font-semibold text-[#0066cc] transition-all hover:bg-[rgba(0,102,204,0.2)]"
                        >Buy Now</a
                    >
                    <a
                        href="/en/tutorials"
                        class="inline-flex items-center justify-center rounded-lg bg-[rgba(0,102,204,0.1)] px-8 py-3 text-lg font-semibold text-[#0066cc] transition-all hover:bg-[rgba(0,102,204,0.2)]"
                        >Quick Start</a
                    >
                </div>
            </div>
            <div
                class="animate-fade-in-up flex justify-center relative z-10"
                style="animation-delay: 0.3s"
            >
                <img
                    src="/images/products/6o4w45.png"
                    alt="IOTAutoMate 6+4 Controller"
                    class="h-auto w-full max-w-[600px] drop-shadow-[0_20px_40px_rgba(0,102,204,0.15)]"
                />
            </div>
        </div>
    </section>

    <!-- 1. Input Interface Section -->
    <FeatureShowcase
        badge="Input Interface:"
        title="Supports 95% of sensors on the market"
        description="Comprehensive compatibility with mainstream sensors, no need to worry about mismatched interfaces. Plug and play, stable and reliable."
        items={inputItems}
        moreItems={inputMoreItems}
        productImg="/images/products/6o4wzm.png"
        specsTitle="Supported sensor signal types:"
        specs={inputSpecs}
        theme="blue"
        highlights={inputHighlights}
        reverseBottom={false}
    />

    <!-- 2. Output Interface Section -->
    <FeatureShowcase
        badge="Output Interface:"
        title="Controls most electrical equipment"
        description="From tiny indicator lights to large industrial motors, IOTAutoMate provides precise control. Multiple output types meet complex scenario needs."
        items={outputItems}
        moreItems={outputMoreItems}
        productImg="/images/products/6o4wzm.png"
        specsTitle="Supported control device types:"
        specs={outputSpecs}
        theme="green"
        highlights={outputHighlights}
        reverseBottom={true}
    />

    <!-- 3. Automation Logic Section -->
    <section class="w-full bg-[#f8fafc] py-24 pb-20 border-y border-slate-100">
        <div class="mx-auto max-w-[1200px] px-6">
            <div class="flex flex-col gap-12 lg:flex-row lg:items-center">
                <!-- Phone Cards -->
                <div
                    class="flex flex-1 gap-4 overflow-x-auto pb-4 lg:gap-3 lg:overflow-visible lg:justify-between mask-fade-sides no-scrollbar"
                >
                    {
                        [
                            {
                                img: "onekey.jpg",
                                title: "One-key Execution",
                                desc: "Pre-configured sequential control logic, execute with one click",
                                delay: "0.1s",
                            },
                            {
                                img: "auto.jpg",
                                title: "Auto Task",
                                desc: "Automatically execute tasks based on time, events, and conditions",
                                delay: "0.2s",
                            },
                            {
                                img: "autoe.jpg",
                                title: "Auto Task Editor",
                                desc: "Add conditions, configure task logic, no programming required!",
                                delay: "0.3s",
                            },
                            {
                                img: "params.jpg",
                                title: "Parameter Status",
                                desc: "Real-time sensor data and device parameters for easy monitoring",
                                delay: "0.4s",
                            },
                            {
                                img: "log.jpg",
                                title: "Operation Log",
                                desc: "Log for one-key and auto tasks, clear at a glance for monitoring",
                                delay: "0.5s",
                            },
                        ].map((card) => (
                            <div
                                class="flex min-w-[130px] max-w-[180px] flex-col items-center hover:z-50 animate-fade-in-up"
                                style={{ animationDelay: card.delay }}
                            >
                                <div class="relative w-full cursor-pointer overflow-hidden rounded-[1.2rem] border-[3px] border-[#1e293b] bg-white shadow-lg transition-all duration-300 hover:scale-[2.4] hover:shadow-2xl aspect-[9/20] group">
                                    <div class="absolute left-1/2 top-0 h-3 w-[35%] -translate-x-1/2 rounded-b-lg bg-[#1e293b] z-10" />
                                    <img
                                        src={`/images/screenshot/${card.img}`}
                                        alt={card.title}
                                        class="h-full w-full object-cover"
                                    />
                                </div>
                                <div class="mt-2 min-h-[5rem] text-center flex flex-col justify-start">
                                    <h3 class="mb-1 text-sm font-bold text-[#1e293b]">
                                        {card.title}
                                    </h3>
                                    <p class="text-xs text-[#64748b] leading-tight">
                                        {card.desc}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <!-- Text Content -->
                <div
                    class="flex flex-col justify-center lg:w-[400px] lg:flex-none"
                    data-aos="fade-left"
                >
                    <h2
                        class="mb-6 text-[2.25rem] font-bold leading-tight text-[#1e293b]"
                    >
                        APP Zero-Code Logic Orchestration
                    </h2>
                    <p
                        class="mb-8 text-[1.1rem] leading-relaxed text-[#64748b]"
                    >
                        Say goodbye to complex PLC ladder diagrams and C
                        language. Configure automation logic on the mobile app
                        like building blocks, what you see is what you get.
                    </p>
                    <ul class="space-y-4">
                        {
                            [
                                {
                                    title: "Simple:",
                                    text: "No development environment installation, no coding, configure directly on the app",
                                },
                                {
                                    title: "Intuitive:",
                                    text: "Natural language configuration, easy for everyone to get started",
                                },
                                {
                                    title: "Efficient:",
                                    text: "Logic is burned to the chip via Bluetooth, ensuring stable local operation",
                                },
                                {
                                    title: "Instant:",
                                    text: "Real-time updates on the app, takes effect in seconds without rebooting",
                                },
                                {
                                    title: "PID:",
                                    text: "PID control for constant temperature, speed, light, humidity...",
                                },
                            ].map((item) => (
                                <li class="relative pl-7 text-[#1e293b]">
                                    <span class="absolute left-0 font-bold text-[#ff6b35]">
                                        ‚úì
                                    </span>
                                    <strong>{item.title}</strong> {item.text}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- 4. Mesh Networking Section -->
    <section class="w-full bg-white py-24 px-6 pb-20">
        <div class="mx-auto max-w-[1200px]">
            <div class="flex flex-col gap-12 md:flex-row-reverse items-center">
                <div class="flex-1" data-aos="fade-left">
                    <h2
                        class="mb-6 text-[2.25rem] font-bold leading-tight text-[#1e293b]"
                    >
                        Supports Mesh Networking
                    </h2>
                    <p
                        class="mb-8 text-[1.1rem] leading-relaxed text-[#64748b]"
                    >
                        Local self-organized network, automatic signal
                        forwarding between devices, no wiring needed, covers
                        wider areas, works without internet. Perfect for
                        large-scale local automation.
                    </p>
                    <ul class="space-y-4">
                        {
                            [
                                {
                                    text: "Long Distance: Line-of-sight wireless range of 500m, multi-hop up to 10km",
                                },
                                {
                                    text: "Strong Signal Penetration: Wireless communication through walls and across floors",
                                },
                                {
                                    text: "Flexible Networking: Each IOTAutoMate can act as both master and slave, allowing one master to connect to 20 slaves with multi-hop support",
                                },
                            ].map((item) => (
                                <li class="relative pl-7 text-[#1e293b]">
                                    <span class="absolute left-0 font-bold text-[#ff6b35]">
                                        ‚úì
                                    </span>
                                    {item.text
                                        .split(": ")
                                        .map((part, i) =>
                                            i === 0 ? (
                                                <strong>{part}: </strong>
                                            ) : (
                                                part
                                            ),
                                        )}
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div
                    class="flex-1 w-full flex justify-center"
                    data-aos="fade-right"
                >
                    <img
                        src="/images/mesh.jpg"
                        alt="Mesh Networking Diagram"
                        class="w-full max-w-[600px] rounded-3xl shadow-[0_10px_40px_rgba(0,0,0,0.1)] transition-transform hover:-translate-y-2"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- 5. Ecosystem Section -->
    <section class="bg-gradient-to-b from-[#f8fafc] to-white py-16 px-6">
        <div class="mx-auto max-w-[1200px]">
            <div class="mb-12 text-center" data-aos="fade-up">
                <h2 class="mb-3 text-[2rem] font-bold text-[#1e293b]">
                    <span
                        class="mr-2 inline-block rounded-full bg-[#0066cc]/10 px-3 py-1 text-2xl font-bold uppercase tracking-wider text-[#0066cc]"
                        >Open Ecosystem</span
                    >
                    Supports Tuya Smart <span
                        class="mx-2 inline-block rounded-lg bg-gradient-to-br from-[#ff6b35] to-[#f7931e] px-3 py-1 text-xl text-white"
                        >or</span
                    > MQTT Protocol
                </h2>
                <p class="text-lg text-[#64748b]">
                    Choose the version that best fits your needs and usage
                    scenarios
                </p>
            </div>

            <div
                class="mx-auto grid max-w-[1100px] gap-8 md:grid-cols-[1fr_auto_1fr] items-stretch"
            >
                <!-- Tuya Card -->
                <div
                    class="group relative overflow-hidden rounded-3xl bg-white p-8 shadow-[0_4px_24px_rgba(0,0,0,0.06)] transition-all hover:-translate-y-2 hover:border-[#ff6b35] hover:shadow-xl border-2 border-transparent"
                    data-aos="fade-right"
                >
                    <div
                        class="absolute -left-1/2 -top-1/2 h-[200%] w-[200%] bg-[radial-gradient(circle_at_center,rgba(255,107,53,0.08)_0%,transparent_70%)] opacity-0 transition-opacity group-hover:opacity-100 pointer-events-none"
                    >
                    </div>
                    <div class="mb-6 flex items-center justify-center gap-4">
                        <img
                            src="/images/logos/tuya.png"
                            alt="Tuya Smart"
                            class="w-16 h-16 object-contain shrink-0"
                        />
                        <div class="flex flex-col text-left">
                            <span
                                class="bg-gradient-to-br from-[#ff6b35] to-[#f7931e] bg-clip-text text-2xl font-extrabold text-transparent"
                                >Tuya Smart</span
                            >
                            <span
                                class="text-xs font-medium uppercase tracking-[0.15em] text-[#64748b]"
                                >Tuya Smart</span
                            >
                        </div>
                    </div>
                    <p
                        class="mb-6 text-[0.95rem] leading-relaxed text-[#64748b]"
                    >
                        Tuya Smart is a leading global IoT platform with servers
                        in North America, Europe, and Asia, providing fast and
                        reliable remote control for users worldwide.
                    </p>
                    <ul class="mb-6 space-y-2">
                        {
                            [
                                'Free use of "Tuya Smart" or "Smart Life" APP',
                                "Access to a massive smart hardware ecosystem",
                                "Voice assistant support (Alexa/Google Home)",
                                "SMS and phone call notifications",
                            ].map((feat) => (
                                <li class="flex items-center gap-3 border-b border-black/5 pb-2 text-[0.9rem] text-[#1e293b]">
                                    <span class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-[#ff6b35]/15 text-xs font-bold text-[#ff6b35]">
                                        ‚úì
                                    </span>
                                    {feat}
                                </li>
                            ))
                        }
                    </ul>
                    <div class="rounded-xl bg-black/5 p-4 text-center">
                        <span
                            class="block text-xs font-medium text-[#64748b] mb-1"
                            >Best For</span
                        >
                        <span
                            class="text-[0.95rem] font-semibold text-[#1e293b]"
                            >Ready to use, consumer-facing, no recurring fees</span
                        >
                    </div>
                </div>

                <!-- Divider -->
                <div
                    class="flex flex-col items-center justify-center gap-3"
                    data-aos="zoom-in"
                >
                    <div
                        class="h-[60px] w-0.5 bg-gradient-to-b from-transparent via-black/10 to-transparent md:block hidden"
                    >
                    </div>
                    <span
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-[#ff6b35] to-[#4a90d9] text-lg font-bold text-white shadow-lg"
                        >OR</span
                    >
                    <div
                        class="h-[60px] w-0.5 bg-gradient-to-b from-transparent via-black/10 to-transparent md:block hidden"
                    >
                    </div>
                </div>

                <!-- MQTT Card -->
                <div
                    class="group relative overflow-hidden rounded-3xl bg-white p-8 shadow-[0_4px_24px_rgba(0,0,0,0.06)] transition-all hover:-translate-y-2 hover:border-[#4a90d9] hover:shadow-xl border-2 border-transparent"
                    data-aos="fade-left"
                >
                    <div
                        class="absolute -left-1/2 -top-1/2 h-[200%] w-[200%] bg-[radial-gradient(circle_at_center,rgba(74,144,217,0.08)_0%,transparent_70%)] opacity-0 transition-opacity group-hover:opacity-100 pointer-events-none"
                    >
                    </div>
                    <div class="mb-6 flex items-center justify-center gap-4">
                        <img
                            src="/images/logos/mqtt.svg"
                            alt="MQTT Protocol"
                            class="h-24 w-36 object-contain shrink-0"
                        />
                        <div class="flex flex-col text-left">
                            <span
                                class="bg-gradient-to-br from-[#4a90d9] to-[#0066cc] bg-clip-text text-2xl font-extrabold text-transparent"
                                >MQTT Protocol</span
                            >
                            <span
                                class="text-xs font-medium uppercase tracking-[0.15em] text-[#64748b]"
                                >Standard Protocol</span
                            >
                        </div>
                    </div>
                    <p
                        class="mb-6 text-[0.95rem] leading-relaxed text-[#64748b]"
                    >
                        Standard MQTT protocol for flexible integration with
                        third-party platforms or self-built management systems,
                        ensuring complete data control.
                    </p>
                    <ul class="mb-6 space-y-2">
                        <li
                            class="flex items-center gap-3 border-b border-black/5 pb-2 text-[0.9rem] text-[#1e293b]"
                        >
                            <span
                                class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-[#4a90d9]/15 text-xs font-bold text-[#4a90d9]"
                                >‚úì</span
                            >
                            <span
                                >Comprehensive <a
                                    href="/en/mqtt"
                                    class="text-[#0066cc] hover:text-[#004c99] hover:underline decoration-1 underline-offset-2"
                                    >MQTT Documentation</a
                                ></span
                            >
                        </li>
                        {
                            [
                                "Easy integration with Home Assistant",
                                "Supports ThingsBoard, ThingsCloud, etc.",
                                "Private server support for data sovereignty",
                            ].map((feat) => (
                                <li class="flex items-center gap-3 border-b border-black/5 pb-2 text-[0.9rem] text-[#1e293b]">
                                    <span class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-[#4a90d9]/15 text-xs font-bold text-[#4a90d9]">
                                        ‚úì
                                    </span>
                                    {feat}
                                </li>
                            ))
                        }
                    </ul>
                    <div class="rounded-xl bg-black/5 p-4 text-center">
                        <span
                            class="block text-xs font-medium text-[#64748b] mb-1"
                            >Best For</span
                        >
                        <span
                            class="text-[0.95rem] font-semibold text-[#1e293b]"
                            >Custom projects ¬∑ Secondary development ¬∑
                            B2B/Developers</span
                        >
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Communication Versions -->
    <section
        class="bg-gradient-to-b from-[#f5f8fb] to-[#f1f5f9] py-24 px-6 border-t border-[#0066cc]/5"
    >
        <div class="mx-auto max-w-[1200px]">
            <div
                class="mx-auto max-w-[800px] text-center mb-16"
                data-aos="fade-up"
            >
                <h2 class="mb-4 text-[2rem] font-bold text-[#1e293b]">
                    <span
                        class="mr-2 inline-block rounded-full bg-[#0066cc]/10 px-3 py-1 text-2xl font-bold uppercase tracking-wider text-[#0066cc]"
                        >Network Versions</span
                    >
                    Connectivity for Every Scenario
                </h2>
                <p class="text-[1.1rem] text-[#64748b]">
                    From local control to global monitoring, IOTAutoMate offers
                    various versions
                </p>
            </div>

            <div class="mx-auto grid max-w-[1100px] gap-8 md:grid-cols-3">
                <!-- Bluetooth -->
                <div
                    class="flex flex-col rounded-3xl bg-white p-10 shadow-sm transition-all hover:-translate-y-2 hover:border-[#0066cc] hover:shadow-lg border-2 border-transparent"
                    data-aos="fade-up"
                    style="animation-delay: 0.1s"
                >
                    <div class="mb-6 flex items-center gap-5">
                        <div
                            class="flex h-14 w-14 shrink-0 items-center justify-center text-4xl"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-12 h-12 text-[#0082fc] drop-shadow-sm"
                            >
                                <path d="m7 7 10 10-5 5V1l5 5L7 17"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-[#1e293b]">
                                Bluetooth Local
                            </h3>
                            <span
                                class="rounded-md bg-[#0066cc]/5 px-2 py-0.5 text-xs font-semibold text-[#0066cc]"
                                >Pure Local ¬∑ Rapid Response</span
                            >
                        </div>
                    </div>
                    <p
                        class="mb-6 text-[0.95rem] leading-relaxed text-[#64748b]"
                    >
                        Designed for offline automation. Logic is stored locally
                        for stability and privacy, ensuring zero-latency
                        control.
                    </p>
                    <ul class="mt-auto space-y-2">
                        {
                            [
                                {
                                    icon: "‚ö°",
                                    text: "Millisecond response time",
                                },
                                { icon: "üîí", text: "100% physical privacy" },
                                { icon: "üõ†Ô∏è", text: "Offline out of the box" },
                            ].map((f) => (
                                <li class="flex items-center gap-3 border-b border-black/5 pb-2 text-[0.9rem] text-[#1e293b]">
                                    <span class="flex w-6 justify-center text-[1.1rem]">
