        <div class="showcase-container">
            <h2 class="section-title">Product Gallery</h2>
            <div class="product-gallery" x-data="{ activeIndex: 0 }">
                <div class="gallery-main">
                    <img
                        x-show="activeIndex === 0"
                        src="/images/products/6+4Ë∑Ø45Â∫¶ok1.png"
                        alt="6+4 Model"
                    />
                    <img
                        x-show="activeIndex === 1"
                        src="/images/products/4Ë∑Ø45Â∫¶.png"
                        alt="4-Channel Model"
                    />
                    <img
                        x-show="activeIndex === 2"
                        src="/images/products/3+2Ë∑Ø45Â∫¶.png"
                        alt="3+2 Model"
                    />
                    <img
                        x-show="activeIndex === 3"
                        src="/images/products/2Ë∑Ø45Â∫¶.png"
                        alt="2-Channel Model"
                    />
                </div>
                <div class="gallery-thumbs">
                    <button
                        @click="activeIndex = 0"
