                    >
                        <img src="/images/products/6+4Ë∑ØÊ≠£Èù¢.png" alt="6+4" />
                        <span>6+4 CH</span>
                    </button>
                    <button
                        @click="activeIndex = 1"
                        :class="{ active: activeIndex === 1 }"
                    >
                        <img src="/images/products/4Ë∑ØÊ≠£Èù¢.png" alt="4CH" />
                        <span>4 CH</span>
                    </button>
                    <button
                        @click="activeIndex = 2"
                        :class="{ active: activeIndex === 2 }"
                    >
                        <img src="/images/products/3+2Ë∑ØÊ≠£Èù¢.png" alt="3+2" />
