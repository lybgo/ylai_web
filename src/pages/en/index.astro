    title="YiQi Smart Pro - IoT Automation Controller | No Programming"
    description="Smart IoT automation controller with no programming required. Configure via mobile app, supports 95% of sensors, WiFi/4G/Bluetooth connectivity"
    lang={lang}
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title animate-fade-in-up">
                    Making Control Simple<br />
                    <span class="hero-title-accent">Connecting Everything</span>
                </h1>
                <p
                    class="hero-subtitle animate-fade-in-up"
