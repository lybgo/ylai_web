---
import Layout from "../../layouts/Layout.astro";

const lang = "zh";

const ylaiApps = [
    {
        name: "App Store",
        url: "https://apps.apple.com/app/%E6%BA%90%E6%9D%A5%E6%99%BA%E8%83%BD/id1662451516",
    },
    {
        name: "Google Play",
        url: "https://play.google.com/store/apps/details?id=com.yuanlai.app.yl_ai",
    },
    {
        name: "应用宝",
        url: "https://sj.qq.com/appdetail/com.yuanlai.app.yl_ai",
    },
    {
        name: "APP操作指南",
        url: "/zh/tutorials/07-initial-setup",
    },
];

const tuyaApps = [
    {
        name: "涂鸦APP",
        url: "https://smartapp.tuya.com/tuyasmart/",
    },
    {
        name: "APP操作指南",
        url: "/zh/tutorials/13-tuya-app",
    },
];

const getQrUrl = (url: string) => {
    // 如果 URL 以 / 开头，则它是相对路径，需要添加当前站点的 Host
    // 在 Astro 模板中可以使用 Astro.url.origin
    const absoluteUrl = url.startsWith("/") ? `${Astro.url.origin}${url}` : url;
    return `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(absoluteUrl)}`;
};
---

<Layout
    title="APP下载 - 宜启智控"
    description="下载源来智能APP和涂鸦智能APP，开始控制您的宜启智控设备"
    keywords="源来智能App下载,宜启智控软件,Android下载,iOS App,物联网调试工具,涂鸦智能App,AppStore下载,GooglePlay下载"
    lang={lang}
>
    <div class="page-header">
        <div class="container">
            <h1 class="page-title">APP下载</h1>
            <p class="page-subtitle">下载官方APP，开启智能控制之旅</p>
        </div>
    </div>

    <div class="content-container">
        <div class="apps-grid">
            <!-- 源来智能 APP -->
            <div class="app-card">
                <div class="app-col-info">
                    <img
                        src="/images/logos/ylai.svg"
                        alt="源来智能"
                        class="app-logo"
                    />
                    <h2>源来智能APP</h2>
                </div>

                <div class="app-col-content">
                    <p class="app-desc">
                        宜启智控官方APP，支持通过蓝牙连接设备，控制设备，配置自动化逻辑、查看设备/传感器数据。
                    </p>

                    <div class="app-features">
                        <span>蓝牙本地控制</span>
                        <span>本地时间控制</span>
                        <span>一键执行配置</span>
                        <span>自动化配置</span>
                        <span>逻辑导入导出</span>
                        <span>Mesh组网配置</span>
                        <span>MQTT配置</span>
                        <span>更多其它本地功能配置</span>
                    </div>

                    <p class="search-hint">
                        可在手机应用市场搜索 <strong>“源来智能”</strong> 安装
                    </p>
                </div>

                <div class="download-buttons">
                    {
                        ylaiApps.map((app) => (
                            <div class="download-link-group">
                                <a
                                    href={app.url}
                                    class="btn btn-outline"
                                    target="_blank"
                                >
                                    {app.name}
                                    <svg
                                        class="icon-qr"
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <rect
                                            x="3"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="14"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="3"
                                            y="14"
                                            width="7"
                                            height="7"
                                        />
                                        <path d="M14 14h7v7h-7z" />
                                        <path d="M7 7l.01 0" />
                                        <path d="M17 7l.01 0" />
                                        <path d="M7 17l.01 0" />
                                    </svg>
                                </a>
                                <div class="qr-popup">
                                    <img
                                        src={getQrUrl(app.url)}
                                        alt={`${app.name} QR Code`}
                                        loading="lazy"
                                    />
                                    {app.name !== "APP操作指南" && (
                                        <span>扫码下载</span>
                                    )}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- 涂鸦智能 APP -->
            <div class="app-card">
                <div class="app-col-info">
                    <img
                        src="/images/logos/tuya.png"
                        alt="涂鸦APP"
                        class="app-logo"
                    />
                    <h2>涂鸦APP</h2>
                </div>

                <div class="app-col-content">
                    <p class="app-desc">
                        全球领先的物联网平台，支持远程控制、智能场景、云端联动、短信/电话报警
                    </p>

                    <div class="app-features">
                        <span>全球远程控制</span>
                        <span>智能场景联动</span>
                        <span>短信电话报警</span>
                    </div>

                    <p class="search-hint">
                        可在手机应用市场搜索 <strong>“涂鸦智能”</strong> 安装
                    </p>
                </div>

                <div class="download-buttons">
                    {
                        tuyaApps.map((app) => (
                            <div class="download-link-group">
                                <a
                                    href={app.url}
                                    class="btn btn-outline"
                                    target="_blank"
                                >
                                    {app.name}
                                    <svg
                                        class="icon-qr"
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <rect
                                            x="3"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="14"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="3"
                                            y="14"
                                            width="7"
                                            height="7"
                                        />
                                        <path d="M14 14h7v7h-7z" />
                                        <path d="M7 7l.01 0" />
                                        <path d="M17 7l.01 0" />
                                        <path d="M7 17l.01 0" />
                                    </svg>
                                </a>
                                <div class="qr-popup">
                                    <img
                                        src={getQrUrl(app.url)}
                                        alt={`${app.name} QR Code`}
                                        loading="lazy"
                                    />
                                    {app.name !== "APP操作指南" && (
                                        <span>扫码下载</span>
                                    )}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .page-header {
        background: var(--bg-light);
        color: var(--text-dark);
        padding: 1.25rem 1.5rem;
        text-align: center;
        border-bottom: 1px solid var(--border-light);
    }

    .page-header .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 1rem;
        text-align: center;
    }

    .page-subtitle {
        font-size: 1.25rem;
        opacity: 0.9;
        margin: 0;
        text-align: center;
    }

    .content-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
    }

    .apps-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 5rem;
    }

    @media (max-width: 768px) {
        .apps-grid {
            grid-template-columns: 1fr;
        }
    }

    .app-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 2px solid transparent;
        transition: all 0.3s ease;
        text-align: left;
        display: grid;
        grid-template-columns: 180px 1fr 240px;
        gap: 2rem;
        align-items: start;
    }

    /* Column 1: Info */
    .app-col-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    /* Column 2: Content */
    .app-col-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .app-card:hover {
        transform: translateY(-5px);
    }

    .app-card.featured {
        border-color: var(--primary);
        box-shadow: 0 4px 20px rgba(0, 102, 204, 0.15);
    }

    .app-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .app-logo {
        width: 128px;
        height: 128px;
        border-radius: 12px;
        margin: 0 auto 1.5rem;
        display: block;
        object-fit: contain;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }

    .app-card h2 {
        font-size: 1.5rem;
        margin: 0;
        color: var(--text-dark);
        font-weight: 700;
    }

    .app-desc {
        color: var(--text-muted);
        line-height: 1.6;
        margin: 0 0 1.5rem;
        font-size: 1.05rem;
    }

    .app-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        justify-content: flex-start;
    }

    .app-features span {
        font-size: 0.875rem;
        color: var(--primary);
        background: var(--primary-light);
        padding: 0.375rem 0.75rem;
        border-radius: 20px;
    }

    .download-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        justify-content: center;
    }

    .download-link-group {
        position: relative;
        width: 100%;
        max-width: 210px;
        margin: 0 auto;
    }

    @media (max-width: 1024px) {
        .app-card {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }

        .app-col-info {
            margin-bottom: 0;
        }

        .app-col-content {
            align-items: center;
        }

        .app-features {
            justify-content: center;
        }

        .download-link-group {
            max-width: 400px;
            margin: 0 auto;
        }
    }

    .qr-popup {
        position: absolute;
        right: 102%;
        top: 50%;
        transform: translateY(-50%) translateX(-10px);
        background: white;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        z-index: 100;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        border: 1px solid var(--border-light);
        min-width: 170px;
    }

    .download-link-group:hover .qr-popup {
        opacity: 1;
        visibility: visible;
        transform: translateY(-50%) translateX(0);
    }

    .qr-popup img {
        width: 140px;
        height: 140px;
        display: block;
        background: #f8fafc;
        border-radius: 8px;
    }

    .qr-popup span {
        font-size: 0.8rem;
        color: var(--text-muted);
        font-weight: 500;
        white-space: nowrap; /* 防止文字换行 */
    }

    .icon-qr {
        margin-left: auto;
        opacity: 0.5;
        transition: opacity 0.2s ease;
    }

    .btn:hover .icon-qr {
        opacity: 1;
    }

    @media (max-width: 1024px) {
        .qr-popup {
            display: none;
        }
        .icon-qr {
            display: none;
        }
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.2s ease;
        width: 100%; /* 确保按钮填满容器宽度，从而保持一致 */
    }

    .btn svg {
        width: 20px;
        height: 20px;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            var(--primary) 0%,
            var(--primary-dark) 100%
        );
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        color: white;
    }

    .btn-secondary {
        background: var(--bg-light);
        color: var(--text-dark);
    }

    .btn-secondary:hover {
        background: var(--primary-light);
        color: var(--primary);
    }

    .btn-outline {
        background: transparent;
        color: var(--text-dark);
        border: 2px solid var(--border-light);
    }

    .btn-outline:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.125rem;
    }

    .app-note {
        font-size: 0.875rem;
        color: var(--text-muted);
        margin: 1rem 0 0;
        font-style: italic;
    }

    .search-hint {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-bottom: 1.25rem;
        padding: 0.75rem;
        background: var(--bg-light);
        border-radius: 8px;
        border: 1px dashed var(--border-light);
    }

    .search-hint strong {
        color: var(--primary);
    }
</style>
