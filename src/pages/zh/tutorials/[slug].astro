    {
        eager: true,
    },
);

const getContentModule = (slug: string) => {
    const path = `../../../components/tutorials/${slug}.astro`;
    return contentModules[path] as any;
};

const contentModule = getContentModule(slug);
const ContentComponent = contentModule?.default ?? null;
const isDraft = contentModule?.isOK === true ? false : true;

