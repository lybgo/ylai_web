---
// Footer component
const { lang = "zh" } = Astro.props;

const content = {
    zh: {
        product: "产品",
        links: [
            { href: `/${lang}/hardware`, label: "硬件接口" },
            { href: `/${lang}/mqtt`, label: "MQTT协议" },
            { href: `/${lang}/tutorials`, label: "使用教程" },
        ],
        resources: "资源",
        resourceLinks: [
            { href: `/${lang}/download`, label: "APP下载" },
            { href: `/${lang}/cases`, label: "应用场景" },
            { href: `/${lang}/compare`, label: "对比选型" },
        ],
        company: "关于",
        companyLinks: [
            { href: `/${lang}/about`, label: "关于我们" },
            { href: `/${lang}/buy`, label: "购买渠道" },
        ],
        copyright: "© 2026 宜启智控 • 深圳市源来智能设备有限公司",
        tagline: "让控制变得简单 · 让万物互联触手可及",
    },
    en: {
        product: "Product",
        links: [
            { href: `/${lang}/hardware`, label: "Hardware" },
            { href: `/${lang}/mqtt`, label: "MQTT Protocol" },
            { href: `/${lang}/tutorials`, label: "Tutorials" },
        ],
        resources: "Resources",
        resourceLinks: [
            { href: `/${lang}/download`, label: "Downloads" },
            { href: `/${lang}/cases`, label: "Use Cases" },
            { href: `/${lang}/compare`, label: "Comparison" },
        ],
        company: "Company",
        companyLinks: [
            { href: `/${lang}/about`, label: "About Us" },
            { href: `/${lang}/buy`, label: "Where to Buy" },
        ],
        copyright: "© 2025 IOTAutoMate. All rights reserved.",
        tagline: "Making Control Simple · Connecting Everything",
    },
};

const t = content[lang as keyof typeof content] || content.zh;
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-grid">
            <!-- Brand Column -->
            <div class="footer-brand">
                <a href={`/${lang}/`} class="brand-logo">
                    <img
                        src="/images/logos/ylai.svg"
                        alt={lang === "zh" ? "宜启智控" : "IOTAutoMate"}
                        class="brand-img"
                    />
                    <span class="brand-text">
                        {lang === "zh" ? "宜启智控" : "IOTAutoMate"}
                    </span>
                </a>
                <p class="brand-tagline">{t.tagline}</p>
            </div>

            <!-- All Links in Grid -->
            <nav class="footer-nav">
                <ul class="footer-links-grid">
                    {
                        [...t.links, ...t.resourceLinks, ...t.companyLinks].map(
                            (link) => (
                                <li>
                                    <a href={link.href}>{link.label}</a>
                                </li>
                            ),
                        )
                    }
                </ul>
            </nav>
        </div>

        <!-- Copyright -->
        <div class="footer-bottom">
            <p class="copyright">
                {t.copyright}
                <a
                    href="http://beian.miit.gov.cn/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="icp-link">粤ICP备2022134117号</a
                >
            </p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        border-top: 1px solid rgba(0, 102, 204, 0.1);
        padding: 3rem 0 1.5rem;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 3fr;
        gap: 4rem;
        align-items: start;
    }

    @media (max-width: 1024px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }
    }

    @media (max-width: 480px) {
        .footer-grid {
            grid-template-columns: 1fr;
        }
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .brand-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
    }

    .brand-img {
        height: 36px;
        width: auto;
        border-radius: 8px;
    }

    .brand-text {
        font-size: 1.125rem;
        font-weight: 700;
        color: #0066cc;
    }

    .brand-tagline {
        font-size: 0.9rem;
        color: #64748b;
        line-height: 1.6;
    }

    .footer-nav {
        flex: 1;
    }

    .footer-links-grid {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem 2rem;
    }

    .footer-links-grid a {
        font-size: 0.95rem;
        color: #64748b;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
    }

    .footer-links-grid a:hover {
        color: #0066cc;
        transform: translateX(4px);
    }

    @media (max-width: 640px) {
        .footer-links-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }
    }

    .footer-bottom {
        margin-top: 3rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 102, 204, 0.1);
        text-align: center;
    }

    .copyright {
        font-size: 0.875rem;
        color: #94a3b8;
        margin: 0;
    }

    .icp-link {
        color: #94a3b8;
        text-decoration: none;
        transition: color 0.2s ease;
        margin-left: 1rem;
    }

    .icp-link:hover {
        color: #0066cc;
    }
</style>
